@model Usuarios
@{
    Layout = null;
    //Usuarios model = new Usuarios();
}

@using(Html.BeginForm("RegistrarUsuario","usuarios",FormMethod.Post))
            {
              <div class="form-group">                  
                      <label for="" class="control-label">Usuario</label>
                      @Html.ValidationMessageFor(model => model.Usuario,"",new {@class ="textoError"})
                      @Html.TextBoxFor(model => model.Usuario, new {@class="form-control",type="email", required="required" })                                        
              </div>     
              <div class="form-group">                  
                      <label for="" class="control-label">Nombre</label>
                      @Html.ValidationMessageFor(model => model.Nombre,"",new {@class ="textoError"})
                      @Html.TextBoxFor(model => model.Nombre, new {@class="form-control",type="text" })
              </div> 
              <div class="form-group">                  
                      <label for="" class="control-label">Contraseña</label>
                     @Html.ValidationMessageFor(model => model.Pass,"",new {@class ="textoError"})
                     @Html.PasswordFor(model => model.Pass, new {@class="form-control", required="required" })                          
              </div> 
              <div class="form-group">                  
                      <label for="" class="control-label">Administrador</label>
                      @Html.ValidationMessageFor(model => model.Administrador,"",new {@class ="textoError"})
                      @Html.CheckBoxFor(model => model.Administrador )
              </div>     
                <hr />
              <div class ="form-group">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                <button type="reset" class="btn btn-warning">Limpiar</button>
                <button data-ajax="true" type="submit" class="btn btn-primary">Registrar</button>          
              </div>
            }

