<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link href="~/Assets/css/formato.css" rel="stylesheet" />   
    <link href="~/Assets/css/ui.jqgrid.css" rel="stylesheet"  />
    <link href="~/Assets/css/jquery-ui.css" rel="stylesheet" />

    
    <script>
        function baseUrl(url) {
            return '@(Url.Content("~/"))' + url;
          }

          function redirect(href) {
              window.location.href = '@(Url.Content("~/"))' + href;
          }
      </script>
     
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="~/Assets/js/jquery.jqGrid.min.js"></script>
    <script src="~/Assets/js/i18n/grid.locale-es.js"></script>    

    
           
    <script src="~/Assets/js/util.js"></script>
    <script src="~/Assets/js/tablas.js"></script>

      
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body style="background-color:#eee; " class="pantallaCompleta" >
    
<!--  ----------------------------- Inicio de Barra de herramientas  -->

<nav class="navbar navbar-default">  
  <div class="container-fluid">
    <div class="navbar-header">  <!-- ::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::: Header de la barra -->      
	  <!-- Boton de colapso -->
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#BARRA-herramientas">
        <span class="sr-only">[Navegacion]</span>
        <span class="icon-bar"></span>  <!-- Dibuja una de las tres rayitas que forman el icono! -->
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <!-- Boton: Menu lateral -->
      <a class="navbar-brand" onclick=" toogleClase('#boton-menu-lateral','glyphicon-chevron-right','glyphicon-chevron-left');  $('#menu').toggle('slide'); " >
        <span id="boton-menu-lateral" class="glyphicon glyphicon-chevron-left"></span>
      </a>
	  <!-- Boton: Inicio -->
      <a class="navbar-brand" href="/controlOffice/menu">
        <span class="glyphicon glyphicon-home "></span>
      </a>
	  <!-- "Documentos" -->
      <a class="navbar-brand" href="#" style="color:#f0ad4e"
	   data-toggle="collapse" 
	   data-target="#V-menu" 
	   aria-expanded="false" 
	   aria-controls="V-menu"
	  >
        <strong> Menú </strong>
        <span class="caret"></span>
      </a>
    </div>
    <div class="collapse navbar-collapse" id="BARRA-herramientas">  <!-- ::::::::::::::::::::::::::::::::::::::: Contenido de la barra -->
      <ul class="nav navbar-nav navbar-right">  <!-- Barra: lado derecho -->	    		
		<li>    <!-- [ Ayuda ] -->
	      <a href="#" 
		   data-toggle="collapse"
		   data-target="#V-ayuda"
		   aria-expanded="false"
		   aria-controls="V-ayuda"
		  >
		    <span class="glyphicon glyphicon-question-sign"></span>
            <strong> Ayuda </strong>
          </a>
		</li>
        <li class="dropdown">  <!-- [ Acerca de ] -->
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
            <span class="glyphicon glyphicon-asterisk"></span>
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu" role="menu">
            <li><a href="#">
              Acerca de Control office
            </a></li>
            <li><a href="#">
              Contacto
            </a></li>
          </ul>		  
        </li>
        <li class="dropdown">  <!-- [ "Usuario" ] -->
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
            <span class="glyphicon glyphicon-user"></span>
            <strong> @ViewBag.NombreUsuario </strong> 
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu" role="menu">
            <li><a href="#">
              Agregar o quitar usuarios 
            </a></li>
            <li class="divider"></li>
            <li><a href="#">
              Editar mi perfil
            </a></li>
            <li><a href="/controlOffice/cerrarsesion">
			  <span class="glyphicon glyphicon-off"></span>
              Cerrar sesion
            </a></li>
          </ul>
        </li>
      </ul> 
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->  
</nav>
<!--  -------------------------------- Fin de Barra de herramientas  -->

<!-- Mini menu -------------------------------- Ventana de menu -->
<div class="collapse" id="V-menu">
  <div class="jumbotron" style="background-color:black">
    <div class="row">
      <div class="col-xs-6 col-md-3">
        <a href="/documentos" class="thumbnail"  style="background-color:rgb(0,174,239)">
          <img src="~/Assets/Iconos/Documentos.png" class="img-responsive" alt="Documentos" width="256" height="256">
        </a>
      </div>
      <div class="col-xs-6 col-md-3">
        <a href="/consumibles" class="thumbnail"  style="background-color:rgb(228,193,0)">
          <img src="~/Assets/Iconos/Consumibles.png" class="img-responsive" alt="Consumibles" width="256" height="256">
        </a>
      </div>
      <div class="col-xs-6 col-md-3">
        <a href="/mobiliario" class="thumbnail"  style="background-color:rgb(199,64,0)">
          <img src="~/Assets/Iconos/Mobiliario.png" class="img-responsive" alt="Mobiliario" width="256" height="256">
        </a>
      </div>
      <div class="col-xs-6 col-md-3">
        <a href="/electronicos" class="thumbnail"  style="background-color:rgb(0,169,236)">
          <img src="~/Assets/Iconos/Electronicos.png" class="img-responsive" alt="Electronicos" width="256" height="256">
        </a>
      </div>
    </div>  <!-- Fin raw -->
  </div>  <!-- Fin Jumbotron -->
</div>  <!-- Fin de Ventana colapsable -->
<!-- Fin -------------------------------------- Ventana de menu -->

<!-- Ayuda -------------------------------- Ventana de ayuda -->
<div class="collapse" id="V-ayuda">
  <div class="jumbotron" style="background-color:#999">
  </div>  <!-- Fin Jumbotron -->
</div>  <!-- Fin de Ventana colapsable -->
<!-- Fin -------------------------------------- Ventana de ayuda -->
    <div class="row-md-12" >
        
        <!-- Inicia el contenido -->
            @RenderBody()
        <!-- Termina el contenido -->

      </div>

    <script src="~/Assets/js/jquery.validate.min.js"></script>
    <script src="~/Assets/js/jquery.validate.unobtrusive.min.js"></script>    
    <script src="~/Assets/js/jquery.form.js"></script>
    <script src="~/Assets/js/notify.min.js"></script>
</body>
</html>
